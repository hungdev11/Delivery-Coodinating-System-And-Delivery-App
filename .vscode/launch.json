{
    "configurations": [
        {
            "type": "java",
            "name": "Spring Boot-GatewayApplication<api-gateway>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "com.ds.gateway.GatewayApplication",
            "projectName": "api-gateway",
            "args": "",
            "envFile": "${workspaceFolder}/.env",
            "vmArgs": " -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=65506 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Dspring.jmx.enabled=true -Djava.rmi.server.hostname=localhost -Dspring.application.admin.enabled=true -Dspring.boot.project.name=api-gateway"
        },
        {
            "type": "java",
            "name": "Spring Boot-UserServiceApplication<user_service>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "com.ds.user.UserServiceApplication",
            "projectName": "user_service",
            "args": "",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "type": "java",
            "name": "Spring Boot-SettingsServiceApplication<setting>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "com.ds.setting.SettingsServiceApplication",
            "projectName": "setting",
            "args": "",
            "envFile": "${workspaceFolder}/.env"
        }
    ],
    "compounds": [
        {
            "name": "Run All Services",
            "configurations": [
                "Spring Boot-SettingsServiceApplication<setting>",
                "Spring Boot-UserServiceApplication<user_service>",
                "Spring Boot-GatewayApplication<api-gateway>"
            ],
            "stopAll": true,
            // "preLaunchTask": "BE: build all (parallel)"
        }
    ]
}
