<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Màu sắc cơ bản -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- Màu theme chính - đồng bộ với web (orange primary, amber/brown secondary) -->
    <!-- Primary: Orange 500 (#F97316) -->
    <color name="colorPrimary">#FFF97316</color>
    <!-- Darker primary: Orange 600 (#EA580C) -->
    <color name="colorPrimaryDark">#FFEA580C</color>
    <!-- Secondary: Brown/Amber nhạt hơn (dựa trên #78350F nhưng sáng hơn) -->
    <color name="colorAccent">#FFB8860B</color>

    <!-- Màu chữ mặc định (thường là màu xám đậm) -->
    <color name="default_text_color">#FF333333</color>

    <!-- Màu cho Trạng thái Đơn hàng -->

    <!-- Màu Xanh lá (Thành công: DELIVERED, SUCCEEDED) -->
    <color name="status_success">#FF2E7D32</color>

    <!-- Màu Vàng/Cam (Chờ/Trễ: IN_WAREHOUSE, DELAYED) -->
    <color name="status_pending">#FFFFA000</color>

    <!-- Màu Xanh dương (Đang giao: ON_ROUTE) -->
    <color name="status_on_route">#FF1976D2</color>

    <!-- Màu Đỏ (Thất bại/Lỗi: FAILED, DISPUTE, LOST) -->
    <color name="status_failed">#FFD32F2F</color>

    <!-- Màu nền nhạt cho Session Items theo trạng thái -->
    <!-- CREATED: Vàng/Cam nhạt -->
    <color name="session_bg_created">#33FFA000</color>
    
    <!-- IN_PROGRESS: Xanh dương nhạt -->
    <color name="session_bg_in_progress">#331976D2</color>
    
    <!-- COMPLETED: Xanh lá nhạt -->
    <color name="session_bg_completed">#332E7D32</color>
    
    <!-- FAILED: Đỏ nhạt -->
    <color name="session_bg_failed">#33D32F2F</color>

</resources>
