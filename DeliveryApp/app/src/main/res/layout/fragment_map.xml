<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/map_view_osm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tilesource="Mapnik"/>

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start|end"
        android:layout_margin="16dp"
        android:background="#99000000"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Đi thẳng trên đường Lê Văn Việt" />

    <!-- NÚT MỚI: Điều hướng về vị trí tài xế -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_recenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_mylocation"
        app:fabSize="mini"
        app:backgroundTint="@color/material_dynamic_neutral99"
        android:contentDescription="Về vị trí hiện tại"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_list_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:src="@drawable/ic_list"
        app:fabSize="normal"
        app:backgroundTint="@color/material_dynamic_neutral99"
        android:contentDescription="Hiển thị danh sách nhiệm vụ"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reload_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_rotate"
        app:fabSize="normal"
        app:backgroundTint="@color/design_default_color_primary"
        android:contentDescription="Tải lại tuyến đường"/>

    <!-- Navigation buttons for leg-by-leg -->
    <LinearLayout
        android:id="@+id/leg_navigation_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btn_prev_leg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Chặng trước"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_leg_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/btn_next_leg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Chặng tiếp theo"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:elevation="10dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
