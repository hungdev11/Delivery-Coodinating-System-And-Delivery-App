<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailActivity">

    <!-- MapView hoặc giả lập bản đồ -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <!-- Thanh đếm giờ và trạng thái -->
    <LinearLayout
        android:id="@+id/layout_timer"
        android:layout_below="@id/map_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#000000">

        <TextView
            android:id="@+id/tvArriveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cần đến điểm đón trong"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00 / 04:14"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Thông tin khách và địa điểm -->
    <LinearLayout
        android:layout_below="@id/layout_timer"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPassenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hành khách"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvPassengerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặng Hùng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPickupAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sảnh R1.05 Tòa R1.03 - Vinhomes Ocean Park"
            android:textSize="15sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvFullAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tòa nhà R1.03, Thị trấn Trâu Quỳ, Gia Lâm, Hà Nội"
            android:textSize="13sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="601.000đ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền mặt"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Nút hành động -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhắn tin"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gọi điện" />
        </LinearLayout>

        <!-- Nút chính -->
        <Button
            android:id="@+id/btnArrived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã đến điểm đón"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />]
    </LinearLayout>
</RelativeLayout>
