<?xml version="1.0" encoding="utf-8"?>
<!--
Layout cho proposal BẠN GỬI.
(Không có nút bấm, chỉ hiển thị trạng thái và kết quả)
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingStart="60dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_sent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:text="Yêu cầu xác nhận từ chối đã được gửi."
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!-- Trạng thái (PENDING, ACCEPTED...) -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PENDING"
        android:textColor="#CCFFFFFF"
        android:textSize="12sp"
        android:textStyle="italic" />

    <!-- Kết quả (nếu có, ví dụ: "2025-11-10") -->
    <TextView
        android:id="@+id/tv_result_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Kết quả: 2025-11-10"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="gone" /> <!-- Mặc định ẩn -->
</LinearLayout>
    </LinearLayout>
