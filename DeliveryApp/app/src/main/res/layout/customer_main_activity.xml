<?xml version="1.0" encoding="utf-8"?>
<!--
  BẢN SỬA LỖI:
  File này chứa 2 FrameLayout XẾP CHỒNG LÊN NHAU.
  1. 'main_fragment_container': Chứa 3 tab chính (List, Track, Profile)
  2. 'detail_fragment_container': (Ẩn lúc đầu) Dùng để đè lên và hiển thị
     màn hình Chi tiết đơn hàng.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5F6FA"
    android:paddingTop="30dp"
    android:layout_height="match_parent"
    tools:context=".customer.MainActivity">

    <!-- CONTAINER CHÍNH (Cho 3 tab) -->
    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/customer_bottom_nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- CONTAINER CHI TIẾT (Xếp chồng, ẩn lúc đầu) -->
    <FrameLayout
        android:id="@+id/detail_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Bottom Nav View (Nằm dưới cùng) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/customer_bottom_nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/customer_bottom_nav_view"
        android:background="#FFFFFF"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>

