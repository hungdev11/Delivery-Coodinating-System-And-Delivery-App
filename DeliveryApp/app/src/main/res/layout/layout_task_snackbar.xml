<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"> <ImageView
    android:id="@+id/img_customer_avatar"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_person"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Maria Akamoto"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/img_customer_avatar"
        app:layout_constraintStart_toEndOf="@id/img_customer_avatar"
        app:layout_constraintEnd_toStartOf="@id/btn_call"
        app:layout_constraintBottom_toTopOf="@id/tv_task_details"/>

    <TextView
        android:id="@+id/tv_task_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mã đơn: PRC-001 | Địa chỉ ngắn gọn"
        android:textSize="12sp"
        android:textColor="#666666"
        app:layout_constraintBottom_toBottomOf="@id/img_customer_avatar"
        app:layout_constraintStart_toEndOf="@id/img_customer_avatar"
        app:layout_constraintEnd_toStartOf="@id/btn_call"/>

    <ImageButton
        android:id="@+id/btn_call"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_call"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toStartOf="@id/btn_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Call Customer"/>

    <ImageButton
        android:id="@+id/btn_chat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_chat"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Chat Customer"/>

</androidx.constraintlayout.widget.ConstraintLayout>